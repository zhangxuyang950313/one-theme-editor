<?xml version="1.0" encoding="utf-8"?>

<Page version="1.0.0" description="桌面壁纸和首屏图标" screenWidth="1080">

    <!-- 
        资源列表配置
        属性 type： 匹配 description.xml 中的定义
        文件协议：   xxx://  image | xml，对应着不同的解析器
    -->
    <Resource 
        type="image"
        name="wallpaper" 
        description="默认壁纸" 
        source="src://wallpaper/default_wallpaper.jpg"
    />
    <Resource
        type="image"
        name="com.android.contacts.activities.TwelveKeyDialer"
        description="拨号"
        source="src://icons/res/drawable-xxhdpi/com.android.contacts.activities.TwelveKeyDialer.png"
    />
    <Resource
        type="image"
        name="com.android.mms"
        description="短信"
        source="src://icons/res/drawable-xxhdpi/com.android.mms.png"
    />
    <Resource
        type="image"
        name="com.android.browser"
        description="浏览器"
        source="src://icons/res/drawable-xxhdpi/com.android.browser.png"
    />
    <Resource
        type="image"
        name="com.android.camera"
        description="相机"
        source="src://icons/res/drawable-xxhdpi/com.android.camera.png"
    />

    <!-- xml 资源 -->
    <Resource 
        type="color"
        name="icon_title_text"
        description="图标文字" 
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=icon_title_text"
    />
    <Resource
        type="color"
        name="action_bar_title_text_color_light"
        description="标题栏文字"
        source="src://wallpaper/theme_values.xml?tag=color&amp;name=action_bar_title_text_color_light"
    />

    <Resource
        type="boolean"
        name="bool_test1"
        description="布尔值测试1"
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=bool_test1"
    />
    <Resource
        type="boolean"
        name="bool_test2"
        description="布尔值测试2"
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=bool_test2"
    />
    <Resource
        type="string"
        name="dimen_test1"
        description="尺寸值测试1"
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=dimen_test1"
    />
    <Resource
        type="string"
        name="dimen_test2"
        description="尺寸值测试2"
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=dimen_test2"
    />
    <Resource
        type="number"
        name="integer_test1"
        description="整型值测试1"
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=integer_test1"
    />
    <Resource
        type="number"
        name="integer_test2"
        description="整型值测试2"
        source="src://com.miui.home/theme_values.xml?tag=color&amp;name=integer_test2"
    />

    <!-- 静态预览图 -->
    <Preview src="../preview/preview.jpg"/>
    <Preview src="../preview/preview1.jpg"/>


    <!-- 预览结构配置 -->
    <Layout>
        <Image 
            x="0" y="0" w="1080" h="2340"
            src="${wallpaper}"
        />
        <!--
            relative 协议
            相对的静态图片定义，这个图片不会在素材区展示，因为它是静态的，没有在 Resource 节点中定义，并不支持资源变更 
        -->
        <Image
            x="0" y="0" size="36" w="168" h="168" 
            src="relative://../icons/res/drawable-xxhdpi/com.android.contacts.activities.TwelveKeyDialer.png"
        />
        <!-- 
            resource 协议
            相对资源根路径的路径，同上图片不会在素材区展示和被修改
         -->
        <Image
            x="0" y="300" size="36" w="168" h="168" 
            src="resource://icons/res/drawable-xxhdpi/com.android.contacts.activities.TwelveKeyDialer.png"
        />
        <Image 
            x="160" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.contacts.activities.TwelveKeyDialer}"
        />
        <Image 
            x="415" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.mms}"
        />
        <Image 
            x="670" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.browser}"
        />
        <Image 
            x="925" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.camera}"
        />
        <Text
            text="拨号"
            x="415" y="1250" size="36" align="center" alignV="center"
            color="${icon_title_text}"
        />
        <Text
            text="顶栏字体"
            x="0" y="0" size="40" align="center" alignV="center"
            color="${action_bar_title_text_color_light}"
        /> 
    </Layout>
</Page>



