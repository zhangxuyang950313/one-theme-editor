<?xml version="1.0" encoding="utf-8"?>

<Page version="1.0.0" description="桌面壁纸和首屏图标" screenWidth="1080">

    <!-- 
        资源列表配置
        资源标签：   File | Value
        属性 type： 匹配 description.xml 中的定义
        文件协议：   xxx://  image | xml，对应着不同的解析器
    -->
    <Resource>
        <File 
            type="image"
            name="wallpaper"
            description="默认壁纸"
            value="image://wallpaper/default_wallpaper.jpg"
        />
        <File
            type="image"
            name="com.android.contacts.activities.TwelveKeyDialer"
            description="拨号"
            value="image://icons/res/drawable-xxhdpi/com.android.contacts.activities.TwelveKeyDialer.png"
        />
        <File
            type="image"
            name="com.android.mms"
            description="短信"
            value="image://icons/res/drawable-xxhdpi/com.android.mms.png"
        />
        <File
            type="image"
            name="com.android.browser"
            description="浏览器"
            value="image://icons/res/drawable-xxhdpi/com.android.browser.png"
        />
        <File
            type="image"
            name="com.android.camera"
            description="相机"
            value="image://icons/res/drawable-xxhdpi/com.android.camera.png"
        />
        <Value
            type="color"
            name="icon_title_text"
            description="图标字体"
            value="xml://com.miui.home/theme_values.xml?name=icon_title_text"
        />
        <Value
            type="color"
            name="action_bar_title_text_color_light"
            description="图标字体"
            value="xml://wallpaper/theme_values.xml?name=action_bar_title_text_color_light"
        />
        <Value
            type="bool"
            name="bool_test1"
            description="布尔值测试"
            value="xml://com.miui.home/theme_values.xml?name=bool_test1"
        />
        <Value
            type="bool"
            name="bool_test2"
            description="布尔值测试"
            value="xml://com.miui.home/theme_values.xml?name=bool_test2"
        />
        <Value
            type="dimen"
            name="dimen_test1"
            description="尺寸值测试"
            value="xml://com.miui.home/theme_values.xml?name=dimen_test1"
        />
        <Value
            type="dimen"
            name="dimen_test2"
            description="尺寸值测试"
            value="xml://com.miui.home/theme_values.xml?name=dimen_test2"
        />
        <Value
            type="integer"
            name="integer_test1"
            description="整型值测试"
            value="xml://com.miui.home/theme_values.xml?name=integer_test1"
        />
        <Value
            type="integer"
            name="integer_test2"
            description="整型值测试"
            value="xml://com.miui.home/theme_values.xml?name=integer_test2"
        />
    </Resource>


    <!-- 静态预览图 -->
    <Previews>
        <Preview src="../preview/preview.jpg"/>
        <Preview src="../preview/preview1.jpg"/>
    </Previews>


    <!-- 预览结构配置 -->
    <Layout>
        <!-- 这个图片不会在素材区展示，因为它是静态的，没有在 Resource 节点中定义 -->
        <Image 
            x="0" y="0" w="1080" h="2340"
            src="resource://wallpaper/default_wallpaper.jpg"
        />
        <Image 
            x="0" y="0" w="1080" h="2340"
            src="${wallpaper}"
        />
        <Image 
            x="160" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.contacts.activities.TwelveKeyDialer}"
        />
        <Image 
            x="415" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.mms}"
        />
        <Image 
            x="670" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.browser}"
        />
        <Image 
            x="925" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.camera}"
        />
        <Text
            text="拨号"
            x="415" y="1250" size="36" align="center" alignV="center"
            color="${icon_title_text}"
        />
    </Layout>
</Page>



