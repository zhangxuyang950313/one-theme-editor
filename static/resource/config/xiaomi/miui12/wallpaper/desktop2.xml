<?xml version="1.0" encoding="utf-8"?>

<!-- 
    单页面配置
    screenWidth: 预览的屏幕基准
    colorFormat: 颜色格式
-->
<Page version="1.0.0" name="桌面壁纸和首屏图标" screenWidth="1080" colorFormat="ARGB"  forceStaticPreview="true">

    <!-- 静态预览图 -->
    <Preview src="resource://preview/preview.jpg"/>

    <!-- 
        资源定义：按照顺序生成 tab
    -->
    <Resource name="图片" :key="image">
        <File name="大背景" :key="settings">
            <!-- 全局大背景 -->
            <Item :key="window_bg_light" src="src://com.android.settings/framework-miui-res/res/drawable-xxhdpi/window_bg_light.9.png"/>
        </File> 
    </Resource>


    <!-- 预览结构配置 -->
    <Layout>
        <Image 
            x="0" y="0" w="1080" h="2340"
            src="${image/settings/window_bg_light}"
        />
    </Layout>
</Page>
