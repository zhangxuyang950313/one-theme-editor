<?xml version="1.0" encoding="utf-8"?>

<page version="1.0.0" description="桌面壁纸和首屏图标" screenWidth="1080">

    <!-- 静态预览图 -->
    <preview src="../preview/preview.jpg"/>
    
    <!-- xml 模板文件 -->
    <template 
        src="theme_values.xml"
        values="value_mapper.xml" 
        to="wallpaper/theme_values.xml"
    />

    <!-- 默认移动的文件 -->
    <copy from="theme_fallback.xml" to="wallpaper/theme_fallback.xml"/>


    <!-- 动态预览配置 -->
    <layout>
        <!-- 图片资源 -->
        <image
            name="桌面壁纸"
            x="540" y="0" w="1080" h="2340" align="center"
            src="./default_wallpaper.jpg"
        >
            <to>wallpaper/default_wallpaper.jpg</to>
        </image>

        <!-- 底栏图标 -->
        <image 
            name="拨号" 
            x="160" y="2150" w="186" h="186" align="center" alignV="center" 
            src="../icons/res/com.android.contacts.activities.TwelveKeyDialer.png"
        >
            <to>icons/res/com.android.contacts.activities.TwelveKeyDialer.png</to>
        </image>

        <text 
            text="拨号"
            x="415" y="1250" size="36" align="center" alignV="center" 
            color="${action_bar_title_text_color_light}"
        />

        <image
            name="短信"
            x="415" y="2150" w="186" h="186" align="center" alignV="center"
            src="../icons/res/com.android.mms.png"
        >
            <to>icons/res/com.android.mms.png</to>
        </image>

        <image
            name="浏览器"
            x="670" y="2150" w="186" h="186" align="center" alignV="center"
            src="../icons/res/com.android.browser.png"
        >
            <to>icons/res/com.android.browser.png</to>
        </image>

        <image
            name="相机"
             x="925" y="2150" w="186" h="186" align="center" alignV="center"
             src="../icons/res/com.android.camera.png"
        >
            <to>icons/res/com.android.camera.png</to>
        </image>

        <!-- 第一排图标 -->
        <image 
            name="天气"
            x="168" y="1100" w="186" h="186" align="center" alignV="center"
            src="../icons/res/com.miui.weather2.png"
        >
            <to>icons/res/com.miui.weather2.png</to>
        </image>

        <text
            text="天气"
            x="168" y="1250" size="36" align="center" alignV="center"
            color="${action_bar_title_text_color_light}"
        />
    </layout>
</page>
