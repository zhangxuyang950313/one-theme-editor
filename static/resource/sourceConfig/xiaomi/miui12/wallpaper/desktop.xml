<?xml version="1.0" encoding="utf-8"?>

<Page version="1.0.0" description="桌面壁纸和首屏图标" screenWidth="1080">

    <!-- 静态预览图 -->
    <Previews>
        <Preview src="../preview/preview.jpg"/>
        <Preview src="../preview/preview1.jpg"/>
    </Previews>

    <!-- 配置 -->
    <Value>
        <Image 
            name="wallpaper"
            description="默认壁纸"
            value="file://wallpaper/default_wallpaper.jpg"
            />
        <Image
            name="com.android.contacts.activities.TwelveKeyDialer"
            description="拨号"
            value="file://icons/res/com.android.contacts.activities.TwelveKeyDialer.png"
            />
        <Image
            description="短信"
            value="file://icons/res/com.android.mms.png"
            />
        <Color
            name="icon_title_text"
            description="图标字体"
            value="file://com.miui.home/theme_values.xml?name=icon_title_text"
            />
        <Bool
            name="bool_test"
            description="布尔值测试"
            value="file://com.miui.home/theme_values.xml?name=bool_test"
            />
        <Dimen
            name="dimen_test"
            description="尺寸值测试"
            value="file://com.miui.home/theme_values.xml?name=dimen_test"
            />
        <Integer
            name="integer_test"
            description="整型值测试"
            value="file://com.miui.home/theme_values.xml?name=integer_test"
            />
    </Value>


    <!-- 预览结构配置 -->
    <Layout>
        <Image 
            x="160" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${wallpaper}"
        />
        <Image 
            x="160" y="2150" w="186" h="186" align="center" alignV="center" 
            src="${com.android.contacts.activities.TwelveKeyDialer}"
        />
        <Text
            text="拨号"
            x="415" y="1250" size="36" align="center" alignV="center"
            color="${icon_title_text}"
        />
    </Layout>
</Page>



