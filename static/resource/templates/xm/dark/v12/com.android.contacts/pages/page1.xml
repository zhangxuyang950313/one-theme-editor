<?xml version="1.0" encoding="utf-8"?>

<config version="1.0" description="联系人列表" screenWidth="1080"/>

<preview src="page_contacts_0.jpg"/>

<!-- 分类 -->
<category tag="source" 	description="图片资源"  	type="image"/>
<category tag="color" 	description="颜色值"  	type="xml"/>
<category tag="bool" 	description="布尔值" 	type="xml"/>
<category tag="dimen" 	description="尺寸值" 	type="xml"/>
<category tag="integer" description="整型值" 	type="xml"/>

<!-- 图片 -->
<source description="电话">t
	<layout x="0" y="0" w="100" h="100"/>
	<from src="../res/drawable-xxhdpi/send_call_ic.png"/>
	<to src="com.android.contacts/res/drawable-xxhdpi">
</source>
<source description="短信">
	<layout x="0" y="200" w="100" h="100"/>
	<from src="../res/drawable-xxhdpi/send_sms_ic.png"/>
	<to src="com.android.contacts/res/drawable-xxhdpi"/>
</source>
<source description="视频">
	<layout x="0" y="300" w="100" h="100"/>
	<from src="../res/drawable-xxhdpi/send_video_ic.png"/>
	<to src="com.android.contacts/res/drawable-xxhdpi"/>
</source>

<!-- 颜色值 -->
<color description="顶栏标题文字颜色">
	<layout x="100" y="300" size="50" text="标题文字"/>
	<value class="class_color_top_title" default="#e6000000"/>
</color>
<color description="顶栏次要标题文字颜色">
	<layout x="100" y="100" size="40" text="次要标题文字"/>
	<value class="class_color_top_subtitle" default="#99000000"/>
</color>

<!-- 整型值 -->
<integer description="状态栏样式：1 黑色图标、文字，透明背景；2 白色图标和文字，透明背景；0 白色图标，黑色背景" >
	<value class="class_integer_window_status" default="1"/>
</integer>
<integer description="复选框（未选）背景透明度 常态；取值范围：0-255">
	<value class="class_integer_checkbox_bg_n" default="13"/>
</integer>

<!-- 布尔值 -->
<bool description="拨号盘的数字是字体。改为false后拨号盘数字是图片">
	<value class="class_bool_default_theme" default="false"/>
</bool>
<bool description="拨号盘展开动画">
	<value class="class_bool_dialerinput_ani" default="false"/>
</bool>
<bool description="详情页状态栏样式；false 为黑色，true 为白色">
	<value class="class_bool_status_bar" default="false"/>
</bool>
<!-- <bool name="class_bool_checkbox_btn" description="复选框 动画；false 关闭动画，true 开启动画；如主题使用素材是，更改为 false">false</bool> -->

<!-- 尺寸值 -->
<dimen description="输入号码 背景的阴影高度（默认：14.099976dp）">
	<value class="class_dimen_digits_input_shadow_height"/>
</dimen>
